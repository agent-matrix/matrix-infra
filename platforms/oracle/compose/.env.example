# Example environment file for the Oracle deployment.
# Copy this file to `.env` and fill in real values before running `docker compose up -d`.

# Where is the production Matrix Hub API?  Use the base URL without a trailing slash.
MATRIXHUB_API_BASE=https://hub.example.com

# Internal URLs used by the services to talk to each other.  In this setup
# Matrix Guardian and Matrix AI run on the same VM, so we use localhost.  When
# exposing via Cloudflare Tunnels, update these to the public tunnel URLs.
MATRIX_AI_BASE=http://localhost:7860
MATRIX_GUARDIAN_BASE=http://localhost:8001

# Provider cascade for Matrix AI.  See docs/llm-providers.md for details.
PROVIDER_ORDER=ollama
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3
GROQ_API_KEY=
GROQ_MODEL=llama3-70b-8192
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-pro
HF_TOKEN=
HF_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# Shared admin token used for authentication between services.
ADMIN_TOKEN=change-me

# Database settings for Matrix Guardian.  Use SQLite for minimal setup.
GUARDIAN_DATABASE_URL=sqlite:///data/guardian.db

# Autopilot settings (optional).  See matrix-guardian README for details.
AUTOPILOT_ENABLED=false
AUTOPILOT_INTERVAL_SEC=3600

# Cloudflare Tunnel hostnames (optional).  Set these when using tunnels.
CF_MATRIX_AI_HOSTNAME=ai.example.com
CF_MATRIX_GUARDIAN_HOSTNAME=guardian.example.com

# MCP Gateway token (optional).  Needed only if you register servers with
# Matrix Hub.
MCP_GATEWAY_TOKEN=